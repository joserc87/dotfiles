#!/usr/bin/env bash

function all {
    tmuxp load -d base \
        cdk \
        smart-topics \
        st-profiles \
    # Disabled
    #   webapps \
    #   dumpy \
    #   st-auth-webhook-notifications-ddb-stream \
    #   st-subscriptions \
    #   st-subscriptions-dispatcher \
    #   st-subscriptions-event-processor \
    #   subscriptionslib \
    #   dumpy-api \
    #   python-api \
    #   dataset-api \
    #   entitytool \
    #   pysync \
    #   bigdata-client \
    #   monitoring-proxy \
    #   bdsm \
    tmux attach -t base
}

parse_args() {
    echo $1
    case "$1" in
        all)
             all
             ;;
         '')
             opt=$(tmuxp ls | fzf)
             [[ -z "$opt" ]] || tmuxp load "$opt"
             ;;
         *)
             opt=$(tmuxp ls | grep "$1" | fzf)
             [[ -z "$opt" ]] || tmuxp load "$opt"
             ;;
    esac
}

parse_args $@
