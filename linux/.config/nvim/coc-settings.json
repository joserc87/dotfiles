{
    // To use Microsoft Python Language Server:
    // as https://github.com/neoclide/coc-python#get-start
    "python.jediEnabled": false,
    //"python.formatting.provider": "autopep8",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/.pyenv/versions/neovim3/bin/black",
    "python.jediPath": "~/.pyenv/versions/neovim3/lib/python3.7/site-packages/",
    // "python.pythonPath": "~/.pyenv/versions/neovim3/bin/python",
    "python.sortImports.path": "~/.pyenv/versions/neovim3/bin/isort",
    //"diagnostic.displayByAle": true,
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextCurrentLineOnly": false,
    // "python.jediPath": "~/.pyenv/versions/3.7.7/lib/python3.7/site-packages",
    // "python.pythonPath": "~/.pyenv/shims/python",
    // "python.jediPath": "~/.pyenv/versions/3.6.9/envs/dumpy/lib/python3.6/site-packages"
    "snippets.userSnippetsDirectory": "~/.config/nvim/snips",
}
